@model Cocus.Domain.DTOs.AircraftDto

@{
    ViewData["Title"] = "Edit Aircraft";
}

<div class="md-card form-container">
    <div class="page-header">
        <h1>
            Edit Aircraft
        </h1>
    </div>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedAt" />
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-error mb-16">
                <div asp-validation-summary="ModelOnly" class="text-error"></div>
            </div>
        }
        
        <div class="form-grid">
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Manufacturer" class="md-typescale-body-large form-label">
                        Manufacturer
                    </label>
                    <input asp-for="Manufacturer" class="md-typescale-body-medium form-input" />
                    <span asp-validation-for="Manufacturer" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Model" class="md-typescale-body-large form-label">
                        Model
                    </label>
                    <input asp-for="Model" class="md-typescale-body-medium form-input" />
                    <span asp-validation-for="Model" class="form-error"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="RegistrationNumber" class="md-typescale-body-large form-label">
                    Registration Number
                </label>
                <input asp-for="RegistrationNumber" class="md-typescale-body-medium form-input" />
                <span asp-validation-for="RegistrationNumber" class="form-error"></span>
            </div>

            <div class="form-section form-section-surface">
                <h3 class="md-typescale-title-medium form-section-title">
                    <span class="material-symbols-outlined">local_gas_station</span>
                    Fuel Specifications
                </h3>
                
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="FuelConsumptionPerKm" class="md-typescale-body-large form-label">
                            Fuel Consumption (L/km)
                        </label>
                        <input asp-for="FuelConsumptionPerKm" type="number" step="0.01" class="md-typescale-body-medium form-input" />
                        <span asp-validation-for="FuelConsumptionPerKm" class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TakeoffFuelEffort" class="md-typescale-body-large form-label">
                            Takeoff Fuel Effort (L)
                        </label>
                        <input asp-for="TakeoffFuelEffort" type="number" step="1" class="md-typescale-body-medium form-input" />
                        <span asp-validation-for="TakeoffFuelEffort" class="form-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-section form-section-surface">
                <h3 class="md-typescale-title-medium form-section-title">
                    <span class="material-symbols-outlined">speed</span>
                    Performance Specifications
                </h3>
                
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="MaxRangeKm" class="md-typescale-body-large form-label">
                            Maximum Range (km)
                        </label>
                        <input asp-for="MaxRangeKm" type="number" step="1" class="md-typescale-body-medium form-input" />
                        <span asp-validation-for="MaxRangeKm" class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CruiseSpeedKmh" class="md-typescale-body-large form-label">
                            Cruise Speed (km/h)
                        </label>
                        <input asp-for="CruiseSpeedKmh" type="number" step="1" class="md-typescale-body-medium form-input" />
                        <span asp-validation-for="CruiseSpeedKmh" class="form-error"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <md-filled-button type="button" onclick="this.closest('form').submit()">
                Save Changes
            </md-filled-button>
            <md-outlined-button type="button" onclick="window.location.href='@Url.Action("Index")'">                
                Cancel
            </md-outlined-button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
