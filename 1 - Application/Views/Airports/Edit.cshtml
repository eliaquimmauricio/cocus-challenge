@model Cocus.Domain.DTOs.AirportDto

@{
    ViewData["Title"] = "Edit Airport";
}

<div class="md-card form-container">
    <div class="page-header">
        <h1>
            Edit Airport
        </h1>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedAt" />

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-error mb-16">
                <div asp-validation-summary="ModelOnly" class="text-error"></div>
            </div>
        }
        
        <div class="form-grid">
            <div class="form-group">
                <label asp-for="Code" class="md-typescale-body-large form-label">
                    Airport Code (IATA/ICAO)
                </label>
                <input asp-for="Code" class="md-typescale-body-medium form-input" />
                <span asp-validation-for="Code" class="form-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="md-typescale-body-large form-label">
                    Airport Name
                </label>
                <input asp-for="Name" class="md-typescale-body-medium form-input" />
                <span asp-validation-for="Name" class="form-error"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="City" class="md-typescale-body-large form-label">
                        City
                    </label>
                    <input asp-for="City" class="md-typescale-body-medium form-input" />
                    <span asp-validation-for="City" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Country" class="md-typescale-body-large form-label">
                        Country
                    </label>
                    <input asp-for="Country" class="md-typescale-body-medium form-input" />
                    <span asp-validation-for="Country" class="form-error"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Latitude" class="md-typescale-body-large form-label">
                        Latitude
                    </label>
                    <input asp-for="Latitude" type="number" step="0.000001" class="md-typescale-body-medium form-input" />
                    <span asp-validation-for="Latitude" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Longitude" class="md-typescale-body-large form-label">
                        Longitude
                    </label>
                    <input asp-for="Longitude" type="number" step="0.000001" class="md-typescale-body-medium form-input" />
                    <span asp-validation-for="Longitude" class="form-error"></span>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <md-filled-button type="button" onclick="this.closest('form').submit()">
                Save Changes
            </md-filled-button>
            <md-outlined-button type="button" onclick="window.location.href='@Url.Action("Index")'">
                Cancel
            </md-outlined-button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
