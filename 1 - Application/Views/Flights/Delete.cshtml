@model Cocus.Domain.DTOs.FlightDto

@{
    ViewData["Title"] = "Delete Flight";
}

<div class="md-card ">
    <div class="card-header">
        <p class="md-typescale-title-large on-error-container">
            Are you sure you want to delete this flight?
        </p>
    </div>
    
    <div class="card-body bg-surface">
        <dl class="details-list">
            <dt>Flight Number:</dt>
            <dd><strong>@Model.FlightNumber</strong></dd>

            <dt>Route:</dt>
            <dd>
                @Model.DepartureAirport?.Code (@Model.DepartureAirport?.City) ? 
                @Model.DestinationAirport?.Code (@Model.DestinationAirport?.City)
            </dd>

            <dt>Aircraft:</dt>
            <dd>@Model.Aircraft?.Model - @Model.Aircraft?.RegistrationNumber</dd>

            <dt>Scheduled Departure:</dt>
            <dd>@Model.ScheduledDeparture.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt>Distance:</dt>
            <dd>@Model.DistanceKm.ToString("N2") km</dd>

            <dt>Fuel Required:</dt>
            <dd>@Model.FuelRequiredLiters.ToString("N2") liters</dd>

            <dt>Status:</dt>
            <dd>@Model.Status</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="card-footer bg-surface">
        <input type="hidden" asp-for="Id" />
        <div class="flex flex-gap-16">
            <md-filled-button onclick="this.closest('form').submit()">
                Confirm Delete
            </md-filled-button>
            <md-outlined-button type="button" onclick="window.location.href='@Url.Action("Index")'">
                Cancel
            </md-outlined-button>
        </div>
    </form>
</div>
