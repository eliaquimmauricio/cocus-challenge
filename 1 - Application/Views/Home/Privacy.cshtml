@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="max-w-800">
    <div class="text-center mb-32">
        <span class="material-symbols-outlined hero-icon">privacy_tip</span>
        <h1 class="md-typescale-display-small mt-16 mb-8">@ViewData["Title"]</h1>
        <p class="md-typescale-body-large text-muted">
            Your privacy is important to us
        </p>
    </div>

    <div class="md-card mb-24">
        <h2 class="md-typescale-headline-small mb-16 color-primary">
            <span class="material-symbols-outlined" style="vertical-align: middle; margin-right: 8px;">security</span>
            Data Protection
        </h2>
        <p class="md-typescale-body-medium text-muted" style="line-height: 1.6;">
            We are committed to protecting your personal information and your right to privacy. 
            This page details our site's privacy policy and how we handle your data.
        </p>
    </div>

    <div class="md-card mb-24">
        <h2 class="md-typescale-headline-small mb-16 color-secondary">
            <span class="material-symbols-outlined" style="vertical-align: middle; margin-right: 8px;">cookie</span>
            Cookies & Tracking
        </h2>
        <p class="md-typescale-body-medium text-muted" style="line-height: 1.6;">
            Our website may use cookies to enhance your browsing experience. You can control cookie settings 
            through your browser preferences. We use cookies only for essential functionality and analytics.
        </p>
    </div>

    <div class="md-card mb-24">
        <h2 class="md-typescale-headline-small mb-16 color-tertiary">
            <span class="material-symbols-outlined" style="vertical-align: middle; margin-right: 8px;">shield_person</span>
            Your Rights
        </h2>
        <p class="md-typescale-body-medium text-muted mb-16" style="line-height: 1.6;">
            You have the right to:
        </p>
        <ul class="md-typescale-body-medium text-muted" style="line-height: 1.8;">
            <li>Access your personal data</li>
            <li>Request correction of inaccurate data</li>
            <li>Request deletion of your data</li>
            <li>Object to processing of your data</li>
            <li>Request transfer of your data</li>
        </ul>
    </div>

    <div class="md-card bg-primary-container">
        <div class="flex-center flex-gap-16">
            <span class="material-symbols-outlined on-primary-container" style="font-size: 40px;">contact_support</span>
            <div>
                <h3 class="md-typescale-title-medium mb-8 on-primary-container">
                    Questions About Privacy?
                </h3>
                <p class="md-typescale-body-medium on-primary-container mb-16">
                    If you have any questions or concerns about our privacy practices, please don't hesitate to contact us.
                </p>
                <md-filled-tonal-button>
                    <span class="material-symbols-outlined" slot="icon">mail</span>
                    Contact Us
                </md-filled-tonal-button>
            </div>
        </div>
    </div>
</div>
